!!!
%html(lang="#{I18n.locale}")
  %head
    = render :partial => 'relaunch/meta'

    - if content_for?(:head)
      = content_for(:head)
    - else
      %meta{:name => 'description', :content => t('header.meta.description')}
      %title=t('header.title')


    = render :partial => 'shared/html5_elements'

    = content_for :javascript_constants

    = stylesheet_link_tag :node, :media => 'screen, projection'

  %body(class=browser_class)
    = render :partial => 'relaunch/header'
    #content
      = show_flash
      = yield

    #footer.fixed
      = render :partial => 'relaunch/footer'

    = render :partial => 'shared/google_tracking'

    = javascript_include_tag :default

    = content_for :javascript

    = render :partial =>  'shared/social_embed'
