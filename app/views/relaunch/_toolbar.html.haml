/ toolbar start
#toolbar
  - cache("#{I18n.locale}/relaunch/_toolbar.html.haml'}", :expires_in => 1.hour) do
    .content
      .btn-toolbar.center
        %button.btn.btn-info.btn-searchbar
          %i.icon-search.icon-white
        = render :partial => 'relaunch/toolbar_search_form'

        .btn-group.status-filter(data-toggle="buttons-checkbox")
          %button.btn.active.btn-info.yes{:name => t('home.index.popup.form.yes'), :'data-value' => 'yes', :'data-toggle' => "popover", :'data-container' => "button.yes", :'data-content' =>  t('wheelmap.what_is.fully_accessible'), :'data-original-title' => t('home.index.popup.form.yes') }
            %span{:'data-value' => 'yes'}
          %button.btn.active.btn-info.limited{:name => t('home.index.popup.form.limited'), :'data-value' => 'limited', :'data-toggle' => "popover", :'data-container' => "button.limited", :'data-content' =>  t('wheelmap.what_is.limited_accessible'), :'data-original-title' => t('home.index.popup.form.limited') }
            %span{:'data-value' => 'yes'}
          %button.btn.active.btn-info.no{:name => t('home.index.popup.form.no'), :'data-value' => 'no', :'data-toggle' => "popover", :'data-container' => "button.no", :'data-content' => t('wheelmap.what_is.not_accessible'), :'data-original-title' => t('home.index.popup.form.no') }
            %span{:'data-value' => 'yes'}
          %button.btn.active.btn-info.unknown{:name => t('home.index.popup.form.unknown'), :'data-value' => 'unknown', :'data-toggle' => "popover", :'data-container' => "button.unknown", :'data-content' => t('wheelmap.what_is.unknown_accessible'), :'data-original-title' => t('home.index.popup.form.unknown') }
            %span{:'data-value' => 'yes'}


        %select.selectpicker.show-menu-arrow.category-filter{:size => 5, :multiple => 'multiple', :title => t('header.toolbar.categories', :default => :en), :'data-style' => "btn-info", :'data-selected-text-format' => "count"}
          - Category.all.sort_by(&:localized_name).each do |category|
            %option{ :value => category.identifier }= category.localized_name
  = render_flash
/ toolbar end