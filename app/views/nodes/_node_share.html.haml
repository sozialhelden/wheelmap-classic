#node-share.btn-group.dropdown
  %button.dropdown-toggle.btn{:'data-toggle' => 'dropdown'}
    %i.icon-share

  %ul.dropdown-menu{role: 'menu'}
    %li
      =link_to "//twitter.com/share?" + { related: 'wheelmap,sozialhelden', hashtags: 'wheelmap', lang: I18n.locale, text: t('nodes.show.share.text', name: node_share.name), dnt: true , url: node_url(node_share)}.to_query, :'data-toggle' => 'share', :'data-name' => 'twitter', target: '_blank' do
        = fa_icon('twitter fixed-width', text: t('nodes.show.share.twitter'))
    %li
      =link_to "//www.facebook.com/sharer/sharer.php?s=100&p[url]=#{node_url(node_share)}", :'data-toggle' => 'share', :'data-name' => 'facebook', target: '_blank' do
        =fa_icon('facebook fixed-width', text: t('nodes.show.share.facebook'))
    %li
      =mailme_to(nil, body: t('nodes.show.share.text', name: node_share.name) + " (#{node_url(node_share)})") do
        =fa_icon('envelope-alt fixed-width', text: t('nodes.show.share.email'))
